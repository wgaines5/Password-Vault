<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="210dp"
    android:layout_height="200dp"
    android:layout_marginVertical="10dp"
    android:layout_marginLeft="10dp"
    android:background="@mipmap/opnbckgnd_round"
    android:gravity="center"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/pwdexpiration"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/siteOrAppName"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="#FDF8F8"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:hint="Site or App Name"
        android:shadowColor="#000000"
        android:textColor="#FFEB3B"
        android:textColorHint="#020202"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/passwordEntry"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:hint="Enter Password"
        android:textColor="#000000"
        android:textColorHint="#000000" />

    <Button
        android:id="@+id/generateB"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="5dp"
        android:background="#86BFED"
        android:text="Generate"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/doneB"
        android:layout_width="98dp"
        android:layout_height="38dp"
        android:backgroundTint="#26F302"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="DONE"
        android:textColor="#000000"
        android:textSize="16sp" />
</LinearLayout>