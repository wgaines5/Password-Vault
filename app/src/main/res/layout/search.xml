<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/searchbgrnd_round"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/searchSOAN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/searchbar"
            android:hint="Enter Site Or App Name"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

    <Button
        android:id="@+id/SearchB"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/search_button"
        android:text="Search"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/searchResLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

        <Button
            android:id="@+id/doneB4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="DONE"
            android:background="@drawable/done_save_but"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>