<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/settingbgnd">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Switch
            android:id="@+id/pinSwitch"
            android:layout_width="148dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/heading"
            android:checked="true"
            android:fontFamily="sans-serif-black"
            android:text="LOGIN PIN (SECURITY)"
            android:textColor="#CA1010"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/nPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/entry"
            android:hint="New Pin"
            android:inputType="number"
            android:textStyle="bold"
            android:textColorHint="#F40000" />

        <EditText
            android:id="@+id/confPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/entry"
            android:hint="Confirm Pin"
            android:inputType="number"
            android:textStyle="bold"
            android:textColorHint="#EF0000" />


    </LinearLayout>
</ScrollView>
    <Button
        android:id="@+id/saveB2"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:background="@drawable/done_save_but"
        android:text="Save"
        android:layout_marginBottom="10dp"
        android:textColor="#1C1919"
        android:textColorHint="#221919"
        android:textSize="14sp"
        android:layout_gravity="bottom|center_horizontal"/>
</androidx.wear.widget.BoxInsetLayout>

