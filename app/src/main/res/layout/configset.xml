<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/settingbgnd">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Switch
            android:id="@+id/pinSwitch"
            android:layout_width="142dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:background="#0B0707"
            android:fontFamily="sans-serif-black"
            android:text="LOGIN PIN (SECURITY)"
            android:textColor="#CA1010"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/newPin"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:hint="Enter New Pin"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <Button
            android:id="@+id/saveB2"
            android:layout_width="125dp"
            android:layout_height="38dp"
            android:backgroundTint="#8AF18E"
            android:text="Save"
            android:textColor="#1C1919"
            android:textColorHint="#221919"
            android:textSize="14sp" />



    </LinearLayout>
</ScrollView>
</androidx.wear.widget.BoxInsetLayout>

