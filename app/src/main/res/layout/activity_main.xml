<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/opnbckgnd_round"
    tools:context=".presentation.MainScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#020101"
        android:fontFamily="cursive"
        android:gravity="center"
        android:shadowColor="#12A1E1"
        android:text="PASSWORD VAULT"
        android:textColor="#039BE5"
        android:textSize="14sp"
        android:textStyle="bold" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="50dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/addPasswordButton"
            android:layout_width="125dp"
            android:layout_height="38dp"
            android:backgroundTint="#31C837"
            android:text="Add"
            android:textSize="14sp" />

        <Button
            android:id="@+id/updatePasswordsButton"
            android:layout_width="125dp"
            android:layout_height="38dp"
            android:backgroundTint="#87D131"
            android:text="Update"
            android:textSize="14sp" />

        <Button
            android:id="@+id/viewPasswordsButton"
            android:layout_width="125dp"
            android:layout_height="38dp"
            android:backgroundTint="#FFC107"
            android:text="View"
            android:textSize="14sp" />

        <Button
            android:id="@+id/removePasswordsButton"
            android:layout_width="125dp"
            android:layout_height="38dp"
            android:backgroundTint="#EA0202"
            android:text="Remove"
            android:textSize="14sp" />

        <Button
            android:id="@+id/infoButton"
            android:layout_width="125dp"
            android:layout_height="38dp"
            android:backgroundTint="#FF5722"
            android:text="Identification"
            android:textSize="12sp" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="125dp"
            android:layout_height="38dp"
            android:backgroundTint="#FF9800"
            android:text="Settings"
            android:textSize="14sp" />




    </LinearLayout>
</ScrollView>
</androidx.wear.widget.BoxInsetLayout>